{% block script %}
<script type="text/javascript">

function changeURL(id, platform_id) {
  var x = document.getElementsByName(platform_id);

  var element = document.getElementById(id);
  var currentURL = window.location.protocol + "//" + window.location.host + element.getAttribute("href");

  for (var i=0; i<x.length; i++) {
    if (x[i].type == "radio" && x[i].checked==true) {
      element.setAttribute("href", currentURL + "?platform=" + x[i].value)

    }
  }
}

</script>
{% endblock script %}
